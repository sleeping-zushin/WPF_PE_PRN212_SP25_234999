<Window x:Class="ResearchProjectManagement_SE123456.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE123456"
        mc:Ignorable="d"
        FontFamily="Tahoma"
        FontSize="26"
        Background="#FFF5F5DC"
        WindowStartupLocation="CenterScreen"
        Title="Login Window Spring 2025" Height="400" Width="700">
    <Grid>
        <Grid Width="700" Height="200" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--//Dat phan tu grid con-->

            <Label Content="Email:" 
                   FontFamily="Arial"
                   FontSize="24"
                   Foreground="#FF6B705C"
                   Grid.Row="0" 
                   Grid.Column="0" 
                   VerticalAlignment="Center"
                   Grid.RowSpan="2"/>

            <TextBox 
                    x:Name="txtEmail"
                    Height="32"
                    Background="#fffff8eb"
                    Grid.Row="0"  
                    Grid.Column="1" 
                    Margin="5" 
                    Grid.RowSpan="2"
                />

            <Label Content="Mật khẩu:" 
                   FontFamily="Arial"
                   FontSize="24"
                   Foreground="#ff68705c"
                   Grid.Row="2" 
                   Grid.Column="0" 
                   VerticalAlignment="Center"
                    Grid.RowSpan="2"/>

            <PasswordBox
                    Name  ="txtPassword"
                    Height="32"
                    Background="#fffff8eb"
                    Grid.Row="2" 
                    Grid.Column="1" 
                    Margin="5" 
                    Grid.RowSpan="2"/>

            <Button 
                x:Name="btnLogin"
                Padding="10"
                Background="#FFB38B82"
                Foreground="#fff"
                Content="ĐĂNG NHẬP" 
                Grid.Row="4" 
                Grid.Column="0" 
                Grid.ColumnSpan="2"
                Margin="5" Click="btnLogin_Click"/>
        </Grid>
    </Grid>
</Window>
