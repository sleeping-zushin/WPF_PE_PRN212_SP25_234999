<Window x:Class="ResearchProjectManagement_SE123456.ResearchProjectForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProjectManagement_SE123456"
        mc:Ignorable="d"
        Title="ResearchProjectForm" Height="500" Width="800"
        FontFamily="Tahoma"
        FontSize="13"
        Background="#FFF5F5DC"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <StackPanel 
            Orientation="Vertical" 
            Margin="10"
            HorizontalAlignment="Left"
            >
            <Label 
                Name="lblFormTitle"
                Content="Research Project Form" 
                FontSize="26" 
                Foreground="#FF6B705C"
                FontWeight="Bold"
                FontFamily="Arial"
                Margin="0,0,0,20"
                />

            <!--research titie-->
            <StackPanel 
                Margin="10" 
                Orientation="Horizontal"
                >
                <Label
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#FF6B705C"
                    Width="120"
                    VerticalAlignment="Center"
                    Content="Project title"
                    />
                <TextBox 
                    Height="32"
                    Width="400"
                    Background="#fffff8eb"
                    Margin="5" 
                    x:Name="txtProjectTitle"
                />
            </StackPanel>

            <!--research field-->
            <StackPanel 
                Margin="10" 
                Orientation="Horizontal"
                >
                <Label
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#FF6B705C"
                    Width="120"
                    VerticalAlignment="Center"
                    Content="Research Field"
                    />
                <TextBox 
                    Height="32"
                    Width="400"
                    Background="#fffff8eb"
                    Margin="5" 
                    x:Name="txtResearchField"
                />
            </StackPanel>

            <!--start date-->
            <StackPanel 
                Margin="10" 
                Orientation="Horizontal"
                >
                <Label
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#FF6B705C"
                    Width="120"
                    VerticalAlignment="Center"
                    Content="Start date"
                    />
                <DatePicker
                    Name="dpkStartDate"
                    />
            </StackPanel>
            <!--end date-->
            <StackPanel 
                Margin="10" 
                Orientation="Horizontal"
                >
                <Label
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#FF6B705C"
                    Width="120"
                    VerticalAlignment="Center"
                    Content="End date"
                    />
                <DatePicker
                    Name="dpkEndDate"
                    SelectedDateFormat="Short"
                    />
            </StackPanel>
            <!--lead researcher-->
            <StackPanel 
                Margin="10" 
                Orientation="Horizontal"
                >
                <Label
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#FF6B705C"
                    Width="120"
                    VerticalAlignment="Center"
                    Content="Lead Researcher"
                    />
                <ComboBox
                    Name="cbxLeadResearcher"
                    Width="200"
                    />
            </StackPanel>
            <!--budget-->
            <StackPanel 
                Margin="10" 
                Orientation="Horizontal"
                >
                <Label
                    FontFamily="Arial"
                    FontSize="12"
                    Foreground="#FF6B705C"
                    Width="120"
                    VerticalAlignment="Center"
                    Content="Project budget"
                    />
                <TextBox 
                    Height="32"
                    Width="400"
                    Background="#fffff8eb"
                    Margin="5" 
                    x:Name="txtBudget"

                />
            </StackPanel>

            <StackPanel 
                Margin="10" 
                Orientation="Horizontal"
                >
                <Button 
                x:Name="btnSubmit"
                Padding="10"
                Width="100"
                Margin="10"
                Background="#FFFFF8EB"
                Content="Submit" Click="btnSubmit_Click"
                />
                <Button 
                x:Name="btnCancel"
                Padding="10"
                Width="100"
                Margin="10"
                Background="#FFFFF8EB"
                Content="Cancel" Click="btnCancel_Click"
                />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
